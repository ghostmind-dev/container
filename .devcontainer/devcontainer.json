{
  "name": "play",
  "build": {
    "dockerfile": "Dockerfile",
    "args": {
      "PROJECT_DIR": "${env:HOME}${env:USERPROFILE}/projects/container/dvc"
    }
  },
  "features": {
    "ghcr.io/devcontainers/features/common-utils:2": {},
    "ghcr.io/devcontainers/features/docker-outside-of-docker:1": {},
    "ghcr.io/ghostmind-dev/features/settings:latest": {},
    "ghcr.io/ghostmind-dev/features/extensions:latest": {},
    "ghcr.io/devcontainers/features/github-cli:1": {},
    "ghcr.io/ghostmind-dev/features/init:latest": {
      "resetLive": true
    },
    "ghcr.io/ghostmind-dev/features/zsh:latest": {
      "theme": "codespaces"
    }
  },
  "postCreateCommand": "deno run -A -r jsr:@ghostmind/init",
  "postStartCommand": "deno run --allow-all /usr/local/share/post-attach.ts",
  "remoteEnv": {
    "SRC": "${containerWorkspaceFolder}",
    "LOCALHOST_SRC": "${env:HOME}${env:USERPROFILE}/projects/container/dvc",
    "GITHUB_TOKEN": "${localEnv:GITHUB_TOKEN}",
    "VAULT_TOKEN": "${localEnv:VAULT_TOKEN}",
    "VAULT_ADDR": "${localEnv:VAULT_ADDR}"
  },
  "runArgs": [
    "--cap-add=CAP_IPC_LOCK",
    "--cap-add=NET_ADMIN",
    "--network=host",
    "--env=SSH_AUTH_SOCK=/ssh-agent",
    "--name=dvc"
  ],
  "mounts": [
    "source=terminal-dvc-history,target=/commandhistory,type=volume",
    "source=/Volumes/Projects,target=/Volumes/Projects,type=bind",
    "source=${env:HOME}${env:USERPROFILE}/.claude.json,target=/home/vscode/.claude.json,type=bind",
    "source=${env:HOME}${env:USERPROFILE}/.gemini,target=/home/vscode/.gemini,type=bind",
    "source=${env:HOME}${env:USERPROFILE}/.cursor,target=/home/vscode/.cursor,type=bind",
    "type=bind,source=/run/host-services/ssh-auth.sock,target=/ssh-agent",
    "type=bind,source=${env:HOME}/.ssh/known_hosts,target=/home/vscode/.ssh/known_hosts,readonly"
  ],
  "customizations": {
    "vscode": {
      "extensions": []
    }
  }
}